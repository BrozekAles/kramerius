
  <head>
    #parse("new-common-header.vm")
    <link href="templates/css/app-results.css" rel="stylesheet">
    <link href="templates/css/app-toolbar.css" rel="stylesheet">
    <link href="templates/css/app-sidebar.css" rel="stylesheet">
  </head>

  <body>

<!-- Navbar -->
    #parse("navbar.vm")
<!--/.navbar -->    
    
    <!-- App toolbar -->
    #parse("context-menu.vm")
    <!--/.app toolbar -->
    
    
    <!-- Wrapper -->
    <div id="app-wrapper">
      <!-- Sidebar -->
      #parse("facets.vm")
      <!--/.sidebar -->

      <!-- Content -->
      <div class="container-fluid">
        <!-- Row -->
        <div class="row">
          <!-- Result area -->
          <div class="app-result-container clearfix" id="app-results-container">
            <!-- Result item -->
            <div class="col-md-3 app-result-item">
              <div class="app-result-item-wrapper policy">
                <img class="img-responsive pull-left" src="" alt="...">
                <p class="app-clean-mg app-pd-right-15">
                  <strong ><a class="app-result-item-title" href="#">loading...</a></strong>
                  <div class="app-result-item-author"></div> 
                  <div class="app-result-item-rok"></div>
                  <div class="app-result-item-teaser" style="display: none;"></div>
                </p>
                <div class="app-color-gray app-result-item-info" role="button" tabindex="0" data-placement="top" data-toggle="popover">
                  <span class="pull-left"><i class="fa fa-info"></i></span>
                  <span class="pull-right"><i class="fa fa-folder-open app-cursor-pointer"></i>&#160;&#160;<span class="app-result-item-found"></span></span>
                </div>
              </div>
            </div><!--/.result item -->


            <!-- Sidebar btn -->
            <a href="#app-btn-sidebar-toggle" class="btn app-sidebar-btn" id="app-btn-sidebar-toggle" title="Skryt sidebar">
              <span> </span>
            </a><!--/.sidebar btn -->
            
          </div><!--/.result area -->
        </div><!--/.row -->
      </div><!--/.content -->
    </div><!--/.wrapper -->
    
    <!-- Footer -->
    #parse('new-footer.vm')
    <!--/.footer -->

    
    <!-- Custom js -->
    <script src="js/facets.js" type="text/javascript" ></script>
    <script src="js/results.js" type="text/javascript" ></script>
    <script>

        var fieldMappings = $search.mappings;

      // Sidebar toggle script
      $("#app-btn-sidebar-toggle").click(function(e) {
        e.preventDefault();
        $("#app-wrapper").toggleClass("toggled");
      });
      
      // View of result items
      function setItemView(state) {
        window.event.preventDefault();
        window.event.stopPropagation();
        if(state == 'row'){
          $('.app-result-container .app-result-item').addClass('app-result-item-row');
        }
        else {
          $('.app-result-container .app-result-item').removeClass('app-result-item-row');
        }
      }
      
      // Footerbar - collapse modification
      $('.app-footerbar-btn').on('click',function(){
        var isActive = $(this).parent().hasClass('active'); // set var to recognize if the parent element contains class 'active'
        $('.app-footerbar').collapse('hide'); // hide when some other element is collapsed
        $('.app-footerbar-btn').parent().removeClass('active'); // remove class 'active' from all parent elements 
        if(!isActive){ // condition for adding class 'active' to the parent element
          $(this).parent().addClass('active');
        }
      })
    </script>
  </body>
